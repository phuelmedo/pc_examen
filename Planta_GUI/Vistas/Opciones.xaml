<Window x:Class="Planta_GUI.Vistas.Opciones"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Planta_GUI.Vistas"
        mc:Ignorable="d"
        Title="Opciones" Height="450" Width="800">
    <DockPanel LastChildFill="False">
        <Menu x:Name="principal" DockPanel.Dock="Top" IsMainMenu="True" Height="20">
            <MenuItem Header="Planta">
                <MenuItem Header="Agregar nueva planta" x:Name="Agregar" Click="Agregar_Click"/>
                <MenuItem Header="Listar plantas" x:Name="Listar" Click="Listar_Click"/>
            </MenuItem>
        </Menu>
    </DockPanel>
</Window>
